{
  "id": "gemini-cli",
  "version": "0.1.3",
  "name": "Gemini CLI",
  "documentationURL": "https://github.com/marblejenka/devcontainer-feature/tree/main/src/gemini-cli",
  "description": "Installs Gemini CLI, and needed dependencies.",
  "options": {
    "version": {
      "type": "string",
      "proposals": [
        "latest"
      ],
      "default": "latest",
      "description": "Select or enter a Gemini CLI version to install"
    },
    "geminifiles": {
      "type": "string",
      "default": "",
      "description": "A git repository URL to clone for gemini-cli configuration. It is expected to have an install.sh at the root."
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "google.geminicodeassist"
      ],
      "settings": {
        "geminicodeassist.updateChannel": "Insiders"
      }
    }
  },
  "containerEnv": {},
  "dependsOn": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  }
}
